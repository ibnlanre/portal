{
  "name": "@ibnlanre/portal",
  "version": "4.0.1",
  "description": "React state management library",
  "scripts": {
    "test": "vitest --typecheck",
    "ts-lint": "tsc --pretty --noEmit --project tsconfig.json",
    "lint": "biome lint --write .",
    "bundle": "tsup --config tsup.config.ts",
    "dry-run": "npm pack --dry-run",
    "package": "npm publish --access public"
  },
  "files": [
    "dist"
  ],
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ibnlanre/portal.git"
  },
  "author": {
    "name": "Ridwan Olanrewaju",
    "email": "olaitanlanre28@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/ibnlanre/portal/issues"
  },
  "homepage": "https://github.com/ibnlanre/portal#readme",
  "peerDependencies": {
    "react": ">16.7",
    "react-dom": ">16.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^20.17.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "happy-dom": "^16.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=14"
  },
  "license": "BSD-3-Clause",
  "keywords": [
    "redux",
    "state",
    "store"
  ]
}
