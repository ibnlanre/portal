{
  "name": "@ibnlanre/portal",
  "version": "0.0.2",
  "description": "React state management library based on RxJS Behavior Subject",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "tsup": {
    "entry": [
      "src/index.tsx"
    ],
    "sourcemap": "inline",
    "banner": {
      "js": "\"use client\";"
    },
    "format": [
      "esm"
    ],
    "clean": true,
