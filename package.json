{
  "name": "@ibnlanre/portal",
  "version": "0.7.6",
  "description": "React state management library based on RxJS Behavior Subject",
  "main": "dist/index",
  "files": [
    "dist"
  ],
  "tsup": {
    "entry": [
      "src/index.tsx"
    ],
    "sourcemap": "inline",
    "banner": {
      "js": "\"use client\";"
    },
    "format": [
      "esm"
    ],
    "clean": true,
    "dts": true,
    "jsx": true
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "tsup",
    "package": "yarn build & yarn publish --access public",
    "test": "jest --config jest.config.ts"
  },
  "keywords": [
    "web",
    "front-end",
    "react",
    "hooks",
    "typescript",
    "state",
    "manager",
    "management",
    "context",
    "store",
    "portal",
    "redux"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ibnlanre/portal.git"
  },
  "author": "Ridwan Olanrewaju <olaitanlanre28@gmail.com>",
  "bugs": {
    "url": "https://github.com/ibnlanre/portal/issues"
  },
  "homepage": "https://github.com/ibnlanre/portal#readme",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8",
    "react-dom": "^16.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@swc/core": "^1.3.61",
    "@types/node": "^20.2.3",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "jest": "^29.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  }
}
