{
  "name": "@ibnlanre/portal",
  "version": "3.22.3-beta",
  "description": "React state management library",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "cjs/index.d.ts",
  "files": [
    "esm",
    "cjs"
  ],
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    }
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "lint": "tsc --pretty --noEmit --project tsconfig.json",
    "test": "vitest -- --typecheck",
    "esm-bundle": "tsup --config tsup.esm.ts",
    "cjs-bundle": "tsup --config tsup.cjs.ts",
    "build": "yarn esm-bundle & yarn cjs-bundle",
    "package": "yarn publish --access public"
  },
  "keywords": [
    "web",
    "front-end",
    "react",
    "hooks",
    "typescript",
    "state",
    "manager",
    "management",
    "context",
    "store",
    "portal",
    "redux",
    "use-portal"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ibnlanre/portal.git"
  },
  "author": "Ridwan Olanrewaju <olaitanlanre28@gmail.com>",
  "bugs": {
    "url": "https://github.com/ibnlanre/portal/issues"
  },
  "homepage": "https://github.com/ibnlanre/portal#readme",
  "license": "MIT",
  "peerDependencies": {
    "react": ">16.7",
    "react-dom": ">16.7"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@swc/core": "^1.3.61",
    "@testing-library/react": "^14.1.0",
    "@types/node": "^20.2.3",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "jsdom": "^22.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vitest": "^0.34.6"
  }
}
